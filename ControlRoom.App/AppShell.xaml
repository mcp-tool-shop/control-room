<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ControlRoom.App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:ControlRoom.App.Views"
    xmlns:pages="clr-namespace:ControlRoom.App.Pages"
    Title="Control Room"
    FlyoutBehavior="Flyout">

    <FlyoutItem Title="Timeline" Route="timeline">
        <ShellContent ContentTemplate="{DataTemplate views:TimelinePage}" />
    </FlyoutItem>

    <FlyoutItem Title="Things" Route="things">
        <ShellContent ContentTemplate="{DataTemplate views:ThingsPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Runbooks" Route="runbooks">
        <ShellContent ContentTemplate="{DataTemplate views:RunbooksPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Dashboard" Route="dashboard">
        <ShellContent ContentTemplate="{DataTemplate views:DashboardPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Status" Route="status">
        <ShellContent ContentTemplate="{DataTemplate pages:StatusPage}" />
    </FlyoutItem>

</Shell>
