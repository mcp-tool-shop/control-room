<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ControlRoom.App.Views.AppShellView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:ControlRoom.App.Views"
    Title="Control Room"
    FlyoutBehavior="Flyout">

    <FlyoutItem Title="Timeline" Route="timeline">
        <ShellContent ContentTemplate="{DataTemplate views:TimelinePage}" />
    </FlyoutItem>

    <FlyoutItem Title="Things" Route="things">
        <ShellContent ContentTemplate="{DataTemplate views:ThingsPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Failures" Route="failures">
        <ShellContent ContentTemplate="{DataTemplate views:FailuresPage}" />
    </FlyoutItem>

</Shell>
