<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ControlRoom.App"
             xmlns:converters="clr-namespace:ControlRoom.App.Converters"
             x:Class="ControlRoom.App.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Converters -->
            <converters:IntToBoolInverterConverter x:Key="IntToBoolInverter" />
            <converters:InvertedBoolConverter x:Key="InvertedBool" />
            <converters:StatusToColorConverter x:Key="StatusToColor" />
            <converters:ErrorToColorConverter x:Key="ErrorToColor" />
            <converters:StringToBoolConverter x:Key="StringToBool" />
            <converters:BoolToExpandIconConverter x:Key="BoolToExpandIcon" />
            <converters:IntToBoolConverter x:Key="IntToBool" />
            <converters:SeverityToColorConverter x:Key="SeverityToColor" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
